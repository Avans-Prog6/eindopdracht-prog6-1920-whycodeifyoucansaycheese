@model IEnumerable<BeestjeOpJeFeestje.Domain.Beast>
@{
    ViewBag.Title = "Step2";
}

<h2>Step2</h2>

<div class="form-inline">
    <div class="form-group">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    <p>Bijbehorende afbeelding</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                foreach (var acc in item.Accessory)
                {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => acc.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => acc.Price)
                        </td>
                        <td>
                            <img src="~/Images/donkey.png" alt="animal.png" width="50" height="50" />
                        </td>
                        <td>
                            @using (Html.BeginForm("AddCheckedAccessory", "Booking", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <input type="text" name="AccID" id="AccieID" value="@acc.ID" hidden />
                                        <input type="submit" value="@acc.Selected" />
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            }
        </table>

        @using (Html.BeginForm("Step2", "Booking", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ga door naar stap 2" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <div class="form-group" style="display:inline-block">
        @Html.Action("InfoBar");
    </div>
</div>


